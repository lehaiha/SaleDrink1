@model IEnumerable<SaleDrink.Areas.Admin.Models.DataModel.UserBusiness>

@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Danh sách nghiệp vụ của hệ thống
        <small class="text-red">@Session["fullName"]</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/UserAdministrators"><i class="fa fa-dashboard"></i> Quản lý người dùng</a></li>
        <li class="active">Quản lý nghiệp vụ</li>
    </ol>
</section>
<div>
    @Html.Raw(TempData["err"])
</div>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                    @*<p class="btn btn-default btn-lg">
                        @Html.ActionLink("Cập nhật", "UpdateBusiness")
                    </p>*@
                    <a href="/Admin/UserBusinesses/UpdateBusiness" class="btn btn-success btn-lg" style="cursor: pointer">Cập nhật</a>
</div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusinessId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusinessName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BusinessId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BusinessName)
                                    </td>
                                    
                                    @*<td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.BusinessId }) |
                                        @Html.ActionLink("Danh sách quyền hạn", "Index", "UserPermissions", new { id = item.BusinessId }, null) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.BusinessId })
                                    </td>*@
                                    <td>
                                        <a href="/Admin/UserBusinesses/Edit/@item.BusinessId" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                                        <a href="/Admin/UserPermissions/Index/@item.BusinessId" data-toggle="tooltip" data-placement="top" title="Danh sách quyền hạn"><i class="fa fa-list-alt"></i></a> &nbsp;
                                        <a href="/Admin/UserBusinesses/Delete/@item.BusinessId" data-toggle="tooltip" data-placement="top" title="Xóa"><i class="fa fa-times-circle"></i></a> &nbsp;
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusinessId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BusinessName)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- page script -->
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>