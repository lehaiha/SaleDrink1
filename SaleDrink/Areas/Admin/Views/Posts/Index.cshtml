@model IEnumerable<Model.EF.Post>
@using SaleDrink.Common;

@{
    ViewBag.Title = "Index";
    if (Session["userID"] == null)
    {
        Response.Redirect("/Admin/Home/Login");
    }
}

<section class="content-header">
    <h1>
        Bản quản lý
        <small>@Session["fullName"] - Member since - @Convert.ToDateTime(Session["createdDate"].ToString()).ToShortDateString()</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i> @(Convert.ToInt32(Session["isAdmin"].ToString()) == 1 ? "Quản trị viên" : "Thành viên")</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                    <a href="/Admin/Posts/Create" class="btn btn-success btn-lg" style="cursor: pointer">
                        Thêm mới
                        @*@Html.ActionLink("Thêm mới", "Create")*@
                    </a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Danh mục
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Alias)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ViewCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.PostCategory.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Alias)
                                    </td>
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.Image)" id="img_@item.ID" class="img-thumbnail" style="cursor:pointer" alt="Alternate Text" width="100" onclick="selectImage('Posts/ChangeImage/@item.ID',this.id)" />
                                    </td>
                                    <td>

                                        @*@StringHelper.ShortArticle(Html.Raw(item.Description).ToString(), 9)*@
                                        @Html.Raw(StringHelper.ShortArticle(item.Description, 9))
                                    </td>
                                    <td>
                                        @*@StringHelper.ShortArticle(Html.Raw(HttpUtility.HtmlDecode(item.Description)), 20)*@
                                        @Html.Raw(StringHelper.ShortArticle(item.Content, 19))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ViewCount)
                                    </td>
                                    <td class="text-center btn-active" data-id="@item.ID" style="cursor:pointer">
                                        @if (item.Status == true)
                                        {
                                            <span class="label label-success">Actived</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Locked</span>
                                        }
                                    </td>
                                    
                                    <td>
                                        <a href="/Admin/Posts/Edit/@item.ID" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                                        <a href="/Admin/Posts/Details/@item.ID" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-list-alt"></i></a> &nbsp;
                                        <span class="Delete" data-id="@item.ID" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="Xóa"><i class="fa fa-times-circle"></i></span> &nbsp;
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>

    <!-- /.row -->
</section>
<script src="~/Assets/Admin/js/Delete/Posts.js"></script>
<script src="~/Assets/Admin/js/ChangesStatus/Posts.js"></script>
<script src="~/Assets/Admin/js/selectImage.js"></script>
<script src="~/Assets/Admin/js/SearchTable.js"></script>
