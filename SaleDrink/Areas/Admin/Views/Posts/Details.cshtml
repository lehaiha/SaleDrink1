@model Model.EF.Post

@{
    ViewBag.Title = "Details";
    if (Session["userID"] == null)
    {
        Response.Redirect("/Admin/Home/Login");
    }
}
<style>
    .detailTable {
        transition: box-shadow .3s;
        width: auto;
        height: auto;
        margin: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
        background: #fff;
        padding: 5px;
    }
</style>
<section class="content-header">
    <h1>
        Bản quản lý
        <small>@Session["fullName"] - Member since - @Convert.ToDateTime(Session["createdDate"].ToString()).ToShortDateString()</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i> @(Convert.ToInt32(Session["isAdmin"].ToString()) == 1 ? "Quản trị viên" : "Thành viên")</li>
    </ol>
</section>
<section class="content">
    <!-- COLOR PALETTE -->
    <div class="box box-default color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-tag"></i> Xem chi tiết
            </h3>
        </div>
        <br />
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.PostCategory.Name)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.PostCategory.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Alias)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.Alias)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd class="detailTable">
                    <img src="@Html.DisplayFor(model => model.Image)" alt="Alternate Text" width="200" />
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd class="detailTable">
                    @Html.Raw(HttpUtility.HtmlDecode(Model.Description))
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Content)
                </dt>

                <dd class="detailTable">
                    @Html.Raw(HttpUtility.HtmlDecode(Model.Content))
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.HomeFlag)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.HomeFlag)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.HotFlag)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.HotFlag)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ViewCount)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.ViewCount)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.CreatedBy)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UpdatedDate)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.UpdatedDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.UpdatedBy)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.MetaKeyword)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.MetaKeyword)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.MetaDescription)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.MetaDescription)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>

                <dd class="detailTable">
                    @Html.DisplayFor(model => model.Status)
                </dd>

            </dl>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <p class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = Model.ID })</p>
                <p class="btn btn-default">@Html.ActionLink("Back to List", "Index")</p>
            </div>
        </div>
        <br /><br />
    </div>

</section>