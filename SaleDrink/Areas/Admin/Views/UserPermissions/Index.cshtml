@model IEnumerable<SaleDrink.Areas.Admin.Models.DataModel.UserPermission>

@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Bảng danh mục cấp quyền
        <small>@Session["fullName"]</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/UserAdministrators"><i class="fa fa-dashboard"></i>Quản lý người dùng</a></li>
        <li><a href="/Admin/UserBusinesses">Quản lý nghiệp vụ</a></li>
        <li class="active">Danh mục cấp quyền</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PermissionName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PermissionName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    @*<td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.PermissionId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.PermissionId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.PermissionId })
                                    </td>*@
                                    <td>
                                        <a href="/Admin/UserPermissions/Edit/@item.PermissionId" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                                        <a href="/Admin/UserPermissions/Details/@item.PermissionId" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-list-alt"></i></a> &nbsp;
                                        <a href="/Admin/UserPermissions/Delete/@item.PermissionId" data-toggle="tooltip" data-placement="top" title="Xóa"><i class="fa fa-times-circle"></i></a> &nbsp;
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PermissionName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- page script -->
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
